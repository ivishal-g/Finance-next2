generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String  @id
  plaidId  String? @map("plaid_id") // optional field unless `.notNull()` in Drizzle
  name     String
  userId   String  @map("user_id")

  @@map("accounts") // optional: maps Prisma model to your actual table name
}

model Categories {
  id String @id
  plaidId String? @map("plaic_id")
  name String 
  userId String @map("user_id")

  @@map("categories")
}
